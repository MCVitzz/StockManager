<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="loginVbox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" spacing="20.0" stylesheets="@../application.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefHeight="30.0" prefWidth="800.0">
         <children>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../Images/user.png" />
               </image>
               <HBox.margin>
                  <Insets left="250.0" />
               </HBox.margin>
            </ImageView>
            <TextField fx:id="txtUser" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="26.0" prefWidth="300.0" promptText="Username" stylesheets="@../application.css">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
         </children>
         <VBox.margin>
            <Insets top="350.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="53.0" prefWidth="800.0">
         <children>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../Images/password.png" />
               </image>
               <HBox.margin>
                  <Insets left="250.0" />
               </HBox.margin>
            </ImageView>
            <PasswordField fx:id="txtPassword" maxHeight="-Infinity" maxWidth="-Infinity" onKeyPressed="#txtPassword_KeyPressed" prefHeight="21.0" prefWidth="300" promptText="Password" stylesheets="@../application.css">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </PasswordField>
         </children>
      </HBox>
      <HBox prefHeight="57.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" onAction="#btnLogin_OnClick" styleClass="loginButtons" stylesheets="@../application.css" text="Login">
               <HBox.margin>
                  <Insets left="300.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#btnExit_OnClick" styleClass="loginButtons" stylesheets="@../application.css" text="Exit">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
